<p style="color: green"><%= notice %></p>

<h1>Tipos de minerações</h1>

<%= link_to "Novo tipo de mineração", new_mining_type_path, class:"btn btn-success" %>
<div id="mining_types" style="display:flex">
  <% @mining_types.each do |mining_type| %>
    <div class="card text-center mb-3" style="width: 18rem; margin: 10px">
      <%= render mining_type %>
      <p>
        <%= link_to "Mostrar mais detalhes", mining_type, class:"btn btn-success" %>
      </p>
    </div>
  <% end %>
</div>


